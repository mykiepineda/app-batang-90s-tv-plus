<div id="hero-banner">
    <div class="container">
        <div class="d-flex">
            <div>
                <div id="image-cover" class="me-3" style="width:300px;height:400px">
                    <img src="/images/shows/{{show._id}}/cover/{{show.cover}}" alt="" class="shadow"
                         style="width:100%;height:100%;object-fit:cover">
                </div>
            </div>
            <div>
                <div class="row">
                    <div class="col">
                        <h1>{{show.title}}</h1>
                        <h6>TV Series<span class="the-dot">{{show.releaseInfo}}</span><span class="the-dot">TV-PG</span><span
                                class="the-dot">{{show.averageRunningTime}}</span></h6>
                        <p>{{show.summary}}</p>
                        <div id="rating">
                            <div class="pt-1 pb-1">
                                <a href="{{show.imdbUrl}}" target="_blank"><h5><img
                                        src="/images/imdb_logo.png"
                                        style="height:25px;padding-right:10px;"><i
                                        class="fa fa-star"
                                        aria-hidden="true"></i>
                                    {{show.imdbRating}} / 10</h5></a>
                            </div>
                        </div>
                        <div id="hero-buttons" class="d-flex flex-row">
                            <div id="play" class="pt-1 pe-3">
                                <a href="/show/{{showId}}/episode/01" class="btn btn-light pt-3 ps-5 pb-3 pe-5"><h5><i
                                        class="fa fa-play"
                                        aria-hidden="true"></i>
                                    Play</h5></a>
                            </div>
                            <div id="add-to-watchlist" class="pt-1">
                                <a href="/watchlist/{{#if inWatchlist}}remove{{else}}add{{/if}}/{{showId}}" class="btn btn-outline-light pt-3 ps-5 pb-3 pe-5"><h5><i
                                        class="fa fa-{{#if inWatchlist}}minus{{else}}plus{{/if}}-circle"
                                        aria-hidden="true"></i> Watchlist</h5></a>
                            </div>
                            <div id="plus-watchlist" class="pt-1">
                                <a href="/watchlist/{{#if inWatchlist}}remove{{else}}add{{/if}}/{{showId}}" class="nav-link pt-3 ps-5 pb-3 pe-5"><h5><i
                                        class="fa fa-{{#if inWatchlist}}minus{{else}}plus{{/if}}" aria-hidden="true"></i></i> Watchlist</h5></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
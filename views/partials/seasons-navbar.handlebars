<div class="container">
    <nav id="seasons-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark" style="--bs-bg-opacity: 0;">
        <div class="flex-grow-1" id="navbarNavDropdown">
            <ul class="navbar-nav">
                {{#each show.seasons}}
                <div class="pe-5">
                    <li id="{{this}}" class="nav-item{{#ifEquals this "Season 1"}} active{{/ifEquals}}">
                        <button class="my-seasons-link nav-link btn btn-link"><h4>{{this}}</h4></button>
                    </li>
                </div>
                {{/each}}
            </ul>
        </div>
    </nav>
</div>
<div class="container">
    <div class="d-flex flex-row flex-wrap">
        {{#each suggestions}}
            <div class="p-3">
                <a href="/show/{{this.slug}}">
                    <div class="card">
                        <div class="d-flex flex-column">
                            <div>
                                <img class="card-img-top" src="{{@root.fileSourceRootUrl}}images/shows/{{this._id}}/title_card/{{this.titleCard}}"
                                     alt="Card image cap">
                            </div>
                            <div class="my-card-title d-flex flex-column justify-content-center align-items-center">
                                <h6>{{this.releaseInfo}}</h6>
                                <h3>{{this.title}}</h3>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>
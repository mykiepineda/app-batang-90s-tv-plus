<div class="container">
    <div class="d-flex flex-row flex-wrap">
        {{#each suggestions}}
        <div class="p-3">
            <div class="card">
                <div class="d-flex flex-column">
                    <div>
                        <img class="card-img-top" src="/images/suggestions/covers/{{cover}}"
                             alt="Card image cap">
                    </div>
                    <div class="my-card-title d-flex justify-content-center align-items-center">
                        <h3>{{name}}</h3>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
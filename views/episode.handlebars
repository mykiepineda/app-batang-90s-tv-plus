<div class="container d-flex justify-content-center mt-3">
    <div id="episode-container" class="d-flex flex-column">
        <div>
            <div id="video-outer-container">
                <div id="loader-container">
                    <div class="lds-spinner">
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>
                <div id="video-container">
                    <video id="video-player" poster="/images/shows/{{video.showId}}/thumbnails/{{video.thumbnail}}" muted="muted" autoplay>
                        <source src="/video/{{video._id}}" type="video/mp4"/>
                    </video>
                    <div id="video-controls">
                        <div class="ps-3 pb-2 pe-3 pt-5">
                            <div id="video-slide-container">
                                <div id="video-track">
                                    <div id="video-progress"></div>
                                </div>
                                <div id="video-thumb">
                                    <div id="video-thumb-indicator"></div>
                                </div>
                            </div>
                        </div>
                        <div id="video-controls-inner" class="d-flex align-items-center pt-0 p-3">
                            {{#unless reachedStart}}
                                <div>
                                    <a href="/show/{{video.showId}}/episode/{{prevEpisode}}" role="button" class="btn btn-light"><i
                                            class="fa fa-step-backward"></i></a>
                                </div>
                            {{/unless}}
                            <div class="text-center" style="width:50px;">
                                <button id="play-pause-button" class="btn btn-light"><i class="fa fa-pause"></i>
                                </button>
                            </div>
                            {{#unless reachedEnd}}
                                <div>
                                    <a href="/show/{{video.showId}}/episode/{{nextEpisode}}" role="button" class="btn btn-light"><i
                                            class="fa fa-step-forward"></i></a>
                                </div>
                            {{/unless}}
                            <div id="volume-container" class="d-flex p-1 align-items-center">
                                <div>
                                    <button id="volume-button" class="btn btn-light text-start"><i
                                            class="fa fa-volume-high"
                                            aria-hidden="true"></i>
                                    </button>
                                </div>
                                <div>
                                    <input id="volume-slider" type="range" min="0" max="1" step="0.10"
                                           value="1">
                                </div>
                            </div>
                            <div class="me-auto">
                                <div id="time"><span id="current">0:00</span> / <span id="duration">0:00</span>
                                </div>
                            </div>
                            <div>
                                <button id="fullscreen" class="btn btn-light"><i class="fa-solid fa-expand"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <h6>Episode {{video.episode}}<span class="the-dot">Season {{video.season}}</span></h6>
            <h3>{{video.title}}</h3>
            <p>{{video.synopsis}}</p>
        </div>
    </div>
    <script src="/scripts/episode.js"></script>
</div>
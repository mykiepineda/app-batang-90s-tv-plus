<div class="container">
    <div id="card" class="d-flex flex-wrap align-items-stretch">
        {{#each videos}}
            <div class="p-2">
                <div class="card" style="width: 18rem; height: 500px;">
                    <img class="card-img-top" src="/images/thumbnails/{{this.thumbnail}}" alt="Card image cap">
                    <h4><i id="card-bookmark"
                           class="fa {{#if this.bookmarked}}fa-bookmark{{else}}fa-bookmark-o{{/if}}"></i></h4>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex flex-column">
                            <h5 class="card-title">{{this.episode}}. {{this.title}}</h5>
                            <p class="card-text">{{this.synopsis}}</p>
                        </div>
                        <div class="d-flex flex-column">
                            <a href="/episode/{{this.episode}}" class="btn btn-primary">Watch Episode <i
                                    class="fa fa-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
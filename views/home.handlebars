<div class="container">
    <h1 class="text-center">Batang 90s TV Plus</h1>
    <h6 class="ps-3">Covers</h6>
</div>

<section id="suggested-section">
    <div class="container">
        <div class="d-flex flex-row flex-wrap">
            {{#each suggestions}}
                <div class="p-3">
                    <a href="/show/{{_id}}">
                        <div class="card">
                            <div class="d-flex flex-column justify-content-center align-items-center" style="position:relative">
                                <div style="width:200px;height:300px">
                                    <img class="card-img-top" src="/images/shows/{{_id}}/cover/{{cover}}"
                                         alt="Card image cap" style="width:100%;height:100%">
                                </div>
                                <div class="my-card-title d-flex justify-content-center align-items-center" style="position:absolute;width:200px;height:300px">
                                    <h3>{{title}}</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</section>

<div class="container">
    <h6 class="ps-3">Titles</h6>
</div>

<section id="suggested-section">
    {{>suggestions}}
</section>